import("//build/config/components/ets_frontend/ets2abc_config.gni")
import("//build/ohos.gni")
import("//build/ohos/taihe_idl/taihe.gni")              #导入taige.gni

copy_taihe_idl("copy_telephonysms") {
  sources = [ "idl/ohos.telephony.sms.taihe" ] 

}
subsystem_name = "telephony"
part_name = "sms_mms"
taihe_generated_file_path = "$taihe_file_path/out/$subsystem_name/$part_name"               #建议直接用此路径

ohos_taihe("run_taihe") {               #调用ohos_taihe模板，生成文件在/out/rk3568/taihe/out/security/crypto_framework文件夹下
  taihe_generated_file_path = "$taihe_generated_file_path"
  deps = [ ":copy_telephonysms" ]
  outputs = [
    "$taihe_generated_file_path/src/ohos.telephony.sms.ani.cpp",
    "$taihe_generated_file_path/src/ohos.telephony.sms.abi.c",
  ]
}

taihe_shared_library("telephony_sms_taihe_native") {                #调用taihe_shared_library模板编译so
  taihe_generated_file_path = "$taihe_generated_file_path"
  part_name = "$part_name"
  subsystem_name = "$subsystem_name"
  sources = get_target_outputs(":run_taihe")
  include_dirs = [ 
    "../../js/napi/include",
    "include",
    "//base/telephony/sms_mms/interfaces/innerkits",
  ]                #根据业务需求添加include目录
  sources += [
    "src/ani_constructor.cpp",
    "src/ohos.telephony.sms.impl.cpp",
    "src/ani_mms_pdu_helper.cpp",
    "src/ani_mms_pdu.cpp",
    "src/ani_send_recv_mms.cpp",
    "src/ani_send_callback.cpp",
    "src/ani_delivery_callback.cpp",
  ]
  deps = [
    ":run_taihe",
    "//base/telephony/sms_mms/frameworks/native:tel_sms_mms_api",               #根据业务添加编译依赖
  ]

  external_deps = [
    "ability_base:base",
    "ability_base:want",
    "ability_runtime:ability_manager",
    "ability_runtime:napi_common",
    "ability_runtime:abilitykit_native",
    "ability_runtime:ani_base_context",
    "c_utils:utils",
    "core_service:libtel_common",
    "core_service:tel_core_service_api",
    "hilog:libhilog",
    "image_framework:image",
    "image_framework:image_native",
    "init:libbegetutil",
    "libuv:uv",
    "napi:ace_napi",
    "data_share:datashare_consumer",
    "ipc:ipc_single",
    "runtime_core:ani_helpers",
  ]

  sanitize = {
    cfi = false             # napi target, not required to enable cfi
    cfi_cross_dso = false
    debug = false
  }
  branch_protector_ret = "pac_ret"
}
generate_static_abc("telephony_sms_abc") {             #调用generate_static_abc编译abc
  base_url = "$taihe_generated_file_path"               #base_url直接设置为taihe_generated_file_path
  files = [ "$taihe_generated_file_path/@ohos.telephony.sms.ets" ]              #files传入生成的ets文件
  is_boot_abc = "True"
  device_dst_file = "/system/framework/telephony_sms_abc.abc"
  dependencies = [ ":run_taihe" ]               #编译abc依赖太和工具链调用                                                                                                                                                                                                                         
}

ohos_prebuilt_etc("telephony_sms_etc") {                #调用ohos_prebuilt_etc将abc拷贝到/system/framework下
  source = "$target_out_dir/telephony_sms_abc.abc"           
  module_install_dir = "framework"
  part_name = "$part_name"
  subsystem_name = "$subsystem_name"
  deps = [ ":telephony_sms_abc" ]               #拷贝abc依赖编译abc
}

group("telephony_sms_taihe") {
  deps = [
    ":telephony_sms_etc",
    ":telephony_sms_taihe_native",
  ]
  #deps = [":run_taihe"]                #单独运行run_taihe目标即可只调用工具链并生成对应代码
}